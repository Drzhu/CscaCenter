.user-menu {
    display: inline-block;
    margin-top: 14px;
    margin-right: 10px;
    float: right;
    list-style: none;
    padding: 0;
}
.user-menu a{color: #fff;}
.user-menu a:hover{text-decoration: none;}

.main-content{
	position:relative;
	min-height:100%;
}
.custom-form{padding-bottom: 0;}
.custom-form .form-group label{
	padding-left: 0; 
	padding-right: 0;
	/*text-align: center;*/
}
.custom-form .form-group .btn{padding:6px 30px;}
.nav-list{
	list-style: none;
	padding: 0;
	border-bottom: 1px solid #e7e7e7 !important;
    border-top: 1px solid #FFFFFF !important;
}
.nav-list>li{
	position: relative;
}
.nav-list>li>a{
	display: block;
	padding:12px 15px;
	color: #333;
    border-bottom: 1px solid #ffffff !important;
    border-top: 1px solid #e7e7e7 !important;
    text-decoration: none;
    font-size:16px;
}
.nav-list>li a:hover{
	text-decoration: none;
	background-color: #fff;
}
.nav-list li.active>a{
	background-color: #DBDBDB;
	color: #555;
}
.nav-list>li>a i{font-size: 16px;}
.nav-list>li>a i.right-icon{font-size: 18px;}
.nav-list>li>ul.sub-menu{
	padding-left: 0;
	background-color: #f8f8f8;
}
.nav-list>li>ul.sub-menu>li{list-style: none;}
.nav-list>li>ul.sub-menu>li>a{
	color: #555;
	display: block;
	padding-left: 45px;
	line-height: 36px;
	text-decoration: none;
}
.breadcrumb{
	border-radius: 0;
    padding: 10px 15px;
    background-color: #f4f4f4;
    margin: 0 0 15px 0;
    border-bottom: 1px solid #e0e2e6;
}

@media (min-width: 768px){
	.sidebar {
	    display: block;
	    position: fixed;
	    width:220px;
	    top: 55px;
	    bottom: 0;
	    left: 0;
	    z-index: 1000;
	    margin: 0;
	    padding: 0;
	    overflow-x: hidden;
	    overflow-y: auto;
	    background-color: #f4f4f4;
	    border-right: 1px solid #CDD2D2;
	}
	.sidebar + .main-content{
		padding:0 10px 55px 14px;
		margin:0 5px 0 220px;
	}
}
@media (max-width: 768px) {
    .sidebar{
  	    width:220px;
	  	position: absolute;
	  	top:50px;
	  	margin: 0;
	  	padding: 0;
	  	background-color: #fff;
	  	z-index: 1000;
	  	box-shadow: 2px 1px 2px 0 rgba(0,0,0,0.15);
	  	transform:translateX(-220px);
	  	transition: transform 0.2s linear 0s, max-height 0s linear 0.2s;
    }
    .sidebar.display{
	    transform: none !important;
    }
    .sidebar + .main-content{
		padding:0 10px;
		margin-left:0px;
		overflow:hidden;
		box-sizing:border-box;
	}
}
.margin-top{
	margin-top: 15px;
}
	
.action-buttons a {
    margin: 0 3px;
    display: inline-block;
    opacity: 0.85;
    -webkit-transition: all 0.1s;
    -o-transition: all 0.1s;
    transition: all 0.1s;
}
.action-buttons a:hover {
  text-decoration: none;
  opacity: 1;
  -moz-transform: scale(1.2);
  -webkit-transform: scale(1.2);
  -o-transform: scale(1.2);
  -ms-transform: scale(1.2);
  transform: scale(1.2);
}
