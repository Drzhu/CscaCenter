.footer {
	padding: 10px 0;
	color: #ccc;
	text-align: center;
	background-color: #444;
	border-top: 1px solid #e5e5e5;
	overflow: hidden;
	clear: both;
}
.login-box {
	width: 400px;
	margin: 4% auto;
}
@media screen and (max-width:768px) {
	.login-box {
		width: 90%;
	}
}
.login-box p {
	text-align: center;
    font-size: 20px;
    color: #3C8DBC;
    margin-bottom: 20px;
}

.login-box .login-logo {
	color: #3C8DBC;
	font-size: 36px;
	text-align: center;
	margin-bottom: 20px;
}

.login-box .login-box-body {
	border-radius: 6px;
	padding: 30px 40px;
	border:1px solid #ccc;
	background-color: #fff;
}

.login-box form .form-control {
	padding-left: 30px !important;
	margin-bottom: 30px;
	
}

.login-box form .form-group i.onlyicon {
	color: #bbb;
	display: block !important;
	font-size: 16px;
	height: 16px;
	margin: 12px 2px 4px 10px;
	position: absolute !important;
	text-align: center;
	width: 16px;
	z-index: 1;
}
.login-help {
	padding: 10px 0 20px 0;
}
.login-help a{color:#73aed2;}
.nav-tabs-custom {
	margin: 10px 0 20px 0;
	box-shadow: 0 1px 1px rgba(0, 0, 0, .05);
}

.nav-tabs-custom>.nav-tabs {
	background-color: #f9f9f9;
	border-top: 3px solid #3c8dbc;
}

.nav-tabs-custom>.tab-content {
	background-color: #fff;
	padding: 10px;
}

.cos-tabs>li {
	width: 25%;
}

.nav-tabs-custom>.nav-tabs>li {
	text-align: center;
}

.nav-tabs-custom>.nav-tabs>li>a,
.nav-tabs-custom>.nav-tabs>li>a:hover {
	background: transparent;
	margin: 0;
}

.nav-tabs-custom>.cos-tabs>li.active>a,
.nav-tabs-custom>.nav-tabs>li.active>a:hover {
	border-top-color: transparent;
	border-left-color: #ddd;
	border-right-color: #ddd;
}

.nav-tabs-custom>.nav-tabs>li.active>a,
.nav-tabs-custom>.nav-tabs>li.active:hover>a {
	background-color: #fff;
	color: #444;
}

.nav-tabs-custom>.nav-tabs>li>a,
.nav-tabs-custom>.nav-tabs>li>a:hover {
	background: transparent;
	margin: 0;
}

.nav-tabs-custom>.nav-tabs>li>a:hover {
	border: 1px solid transparent;
}

.nav-tabs-custom>.nav-tabs>li:first-of-type>a,
.nav-tabs-custom>.nav-tabs>li:first-of-type>a:hover {
	border-left-color: transparent;
}

.nav-tabs-custom>.nav-tabs>li:last-of-type>a,
.nav-tabs-custom>.nav-tabs>li:last-of-type>a:hover {
	border-right-color: transparent;
}
.whole-country,.pro-city{
	height:450px;
}
.nav-tabs-header{box-shadow: none;}
.nav-tabs-header .nav-tabs{
	position: relative;
	top:-50px;
	border: none;
	margin-right: 3px;
}
.nav-tabs-header .nav-tabs li{
	padding: 0 10px;
}

.nav-tabs-header .nav-tabs li.active{
	background-color: #FFF;
	border-left: 1px solid #eee;
	border-right: 1px solid #eee;
}
.nav-tabs-header .nav-tabs li:first-of-type{
	border-left: none;
}
.nav-tabs-header .nav-tabs li:last-of-type{
	border-right: none;
}
.nav-tabs-header .nav-tabs li.active a{
	border: none;
}
@media (max-width:374px ) {
	.nav-tabs-header .nav-tabs li{padding: 0;}
}
@media (max-width:414px ) {
	.chartbox{height:350px;}
}
/*===============================*/
.user-menu {
    display: inline-block;
    margin-top: 14px;
    margin-right: 10px;
    float: right;
    list-style: none;
    padding: 0;
}
.user-menu a{color: #fff;}
.user-menu a:hover{text-decoration: none;}

.custom-form{padding-bottom: 0;}
.custom-form .form-group label{
	padding-left: 0; 
	padding-right: 0;
	/*text-align: center;*/
}
.nav-list{
	list-style: none;
	padding: 0;
	border-bottom: 1px solid #e7e7e7 !important;
    border-top: 1px solid #FFFFFF !important;
}
.nav-list>li{
	position: relative;
}
.nav-list>li>a{
	display: block;
	padding:12px 15px;
	color: #555;
    border-bottom: 1px solid #ffffff !important;
    border-top: 1px solid #e7e7e7 !important;
    text-decoration: none;
}
.nav-list>li a:hover{
	text-decoration: none;
	background-color: #fff;
}
.nav-list li.active>a{
	background-color: #fff;
	color: #2B7DBC;
}
.nav-list>li>a i{font-size: 16px;}
.nav-list>li>a i.right-icon{font-size: 18px;}
.nav-list>li>ul.sub-menu{
	padding-left: 0;
	background-color: #f8f8f8;
}
.nav-list>li>ul.sub-menu>li{list-style: none;}
.nav-list>li>ul.sub-menu>li>a{
	color: #555;
	display: block;
	padding-left: 45px;
	line-height: 36px;
	text-decoration: none;
}
.breadcrumb{
	border-radius: 0;
    padding: 10px 15px;
    background-color: #f4f4f4;
    margin: 0 0 15px 0;
    border-bottom: 1px solid #e0e2e6;
}

.sidebar {
    display: block;
    position: fixed;
    width:220px;
    top: 50px;
    bottom: 0;
    left: 0;
    z-index: 1000;
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    overflow-y: auto;
    background-color: #f4f4f4;
    border-right: 1px solid #CDD2D2;
}
.sidebar + .main-content{
	padding:0 10px;
	margin-left:220px;
	overflow:hidden;
	box-sizing:border-box;
}
@media (max-width: 768px) {
    .sidebar{
  	    width:220px;
	  	position: absolute;
	  	top:50px;
	  	margin: 0;
	  	padding: 0;
	  	background-color: #fff;
	  	z-index: 1000;
	  	box-shadow: 2px 1px 2px 0 rgba(0,0,0,0.15);
	  	transform:translateX(-190px);
	  	transition: transform 0.2s linear 0s, max-height 0s linear 0.2s;
    }
    .sidebar.display{
	    transform: none !important;
    }
}
.margin-top{
	margin-top: 15px;
}
	
.action-buttons a {
    margin: 0 3px;
    display: inline-block;
    opacity: 0.85;
    -webkit-transition: all 0.1s;
    -o-transition: all 0.1s;
    transition: all 0.1s;
}
.action-buttons a:hover {
  text-decoration: none;
  opacity: 1;
  -moz-transform: scale(1.2);
  -webkit-transform: scale(1.2);
  -o-transform: scale(1.2);
  -ms-transform: scale(1.2);
  transform: scale(1.2);
}
