	$(".nav-list li.has-sub>a").on("click",function(){
		$(this).addClass("active");
		var sub=$(this).next();
		if(sub.is(":visible")){
			sub.slideUp(200);
			$(this).find(".right-icon").removeClass("fa-angle-down").addClass("fa-angle-left");
		}else{
			sub.slideDown(200);
			$(this).find(".right-icon").removeClass("fa-angle-left").addClass("fa-angle-down");
		}
	});
	
